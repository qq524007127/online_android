<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content">

        <com.easemob.easeui.widget.EaseImageView
            android:id="@+id/conversation_header_civ"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:ease_border_color="@color/white"
            app:ease_border_width="2dp"
            app:ease_shape_type="round" />

        <TextView
            android:id="@+id/conversation_bagde_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/badge_bg"
            android:gravity="center"
            android:text="99+"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conversation_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="14dp"
            android:padding="5dp"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/conversation_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:minHeight="12dp"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>