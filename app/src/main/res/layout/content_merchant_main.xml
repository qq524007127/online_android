<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.com.zhihetech.online.core.view.ZhiheSwipeRefreshLayout
        android:id="@+id/merchant_activity_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.com.zhihetech.online.core.view.LoadMoreListView
            android:id="@+id/merchant_activity_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/normal_bg"
            android:dividerHeight="5dp"
            android:listSelector="@android:color/transparent">

        </cn.com.zhihetech.online.core.view.LoadMoreListView>
    </cn.com.zhihetech.online.core.view.ZhiheSwipeRefreshLayout>
</LinearLayout>