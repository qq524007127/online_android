<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/cardview_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_radius"
        app:cardElevation="@dimen/cardview_elevation">

        <cn.com.zhihetech.online.core.view.FixedWidthLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:aspect_ratio="0.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/activity_cover_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/activity_cover_iv"
                    android:alpha="0.8"
                    android:background="#8f8682"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/activity_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="@string/activity_date_msg"
                        android:textColor="@color/white" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/activity_ing_iv"
                    android:layout_width="47dp"
                    android:layout_height="59dp"
                    android:layout_alignTop="@+id/activity_cover_iv"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/activity_flag" />
            </RelativeLayout>
        </cn.com.zhihetech.online.core.view.FixedWidthLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>