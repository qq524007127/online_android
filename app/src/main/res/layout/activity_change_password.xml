<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/change_pwd_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            style="@style/CommonViewLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_layout_height"
            android:background="@drawable/change_pwd_input_bg">

            <ImageView
                style="@style/InputIconStyle"
                android:layout_width="@dimen/input_icon_size"
                android:layout_height="@dimen/input_icon_size"
                android:src="@drawable/pwd" />

            <EditText
                android:id="@+id/old_password"
                style="@style/CommonInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="@color/textColor"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/CommonViewLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_layout_height"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/change_pwd_input_bg">

            <ImageView
                style="@style/InputIconStyle"
                android:layout_width="@dimen/input_icon_size"
                android:layout_height="@dimen/input_icon_size"
                android:src="@drawable/pwd" />

            <EditText
                android:id="@+id/new_password"
                style="@style/CommonInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="@color/textColor"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/CommonViewLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_layout_height"
            android:background="@drawable/change_pwd_input_bg">

            <ImageView
                style="@style/InputIconStyle"
                android:layout_width="@dimen/input_icon_size"
                android:layout_height="@dimen/input_icon_size"
                android:src="@drawable/pwd" />

            <EditText
                android:id="@+id/re_new_password"
                style="@style/CommonInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

        </LinearLayout>


        <Button
            android:id="@+id/change_pwd_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/change_pwd_btn_bg"
            android:text="@string/modify"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>