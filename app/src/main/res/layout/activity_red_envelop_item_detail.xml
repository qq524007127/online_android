<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar_layout" />

    <cn.com.zhihetech.online.core.view.FixedLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/envelop_item_detail_top"
        app:aspect_ratio="0.635">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <com.easemob.easeui.widget.EaseImageView
                android:id="@+id/envelop_item_detail_merchant_cover_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:ease_radius="50dp"
                app:ease_shape_type="rectangle" />

            <TextView
                android:id="@+id/envelop_item_detail_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </cn.com.zhihetech.online.core.view.FixedLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/envelop_item_amount_money_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:textSize="28sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/envelop_item_save_state_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/saved_my_wallet"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/envelop_item_save_my_wallet_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/orange_bg"
            android:minHeight="26dp"
            android:padding="6dp"
            android:text="@string/save_my_wallet"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <cn.com.zhihetech.online.core.view.FixedLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/envelop_item_detail_bottom"
        app:aspect_ratio="0.163">

    </cn.com.zhihetech.online.core.view.FixedLayout>
</LinearLayout>