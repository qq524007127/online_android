<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.com.zhihetech.online.core.view.FixedImageView
        android:id="@+id/recommend_goods_cover_fiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/please_wait"
        app:width_height_ratio="1" />

    <TextView
        android:id="@+id/recommend_goods_price_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recommend_goods_cover_fiv"
        android:alpha="0.8"
        android:background="#8f8682"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>