<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <cn.com.zhihetech.online.core.view.FixedWidthLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:aspect_ratio="0.325">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/volum_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <com.easemob.easeui.widget.EaseImageView
                        android:id="@+id/coupon_mernchant_cover_iv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/use_volum_bg"
                        app:ease_shape_type="round" />

                    <TextView
                        android:id="@+id/coupon_mernchant_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="2dp"
                        android:textColor="@color/coupon_info_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/coupon_face_value_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="￥40"
                            android:textColor="@color/coupon_face_value_color"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/coupon_type_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="代金券"
                            android:textColor="@color/coupon_info_color"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="6dp">

                        <TextView
                            android:id="@+id/coupon_detail_info_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:textColor="@color/coupon_info_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/coupon_validity_period_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/coupon_info_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <cn.com.zhihetech.online.core.view.FixedHeightLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/coupon_state_bg"
                app:fixed_height_aspect_ratio="0.56">

                <TextView
                    android:id="@+id/coupon_state_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="使用"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </cn.com.zhihetech.online.core.view.FixedHeightLayout>

        </LinearLayout>
    </cn.com.zhihetech.online.core.view.FixedWidthLayout>
</LinearLayout>