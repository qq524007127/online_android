<resources>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="HomeSearchBoxStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/main_search_box_padding</item>
    </style>

    <style name="PopWindowStyle">
        <item name="android:windowEnterAnimation">@anim/pop_window_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_window_exit_anim</item>
    </style>

    <style name="EditViewTheme">
        <item name="android:background">@drawable/border_white_bg</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/border_white_bg</item>
        <item name="android:minHeight">@dimen/view_min_height</item>
    </style>

    <!--自定义评分控件样式-->
    <style name="AppRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/merchant_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--带图标的输入框容器-->
    <style name="CommonViewLayoutStyle">
        <item name="android:background">@drawable/border_white_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="InputIconStyle">
        <item name="android:width">@dimen/input_icon_size</item>
        <item name="android:height">@dimen/input_icon_size</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="CommonInputStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
