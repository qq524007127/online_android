<resources>

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:alertDialogTheme">@style/AppAlertDialogStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!--自定义系统弹出框样式-->
    <style name="AppAlertDialogStyle" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="titleTextColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorAlertDialogListItem">@color/textColor</item>
        <item name="android:textAppearance">@style/AlertTextAppearance</item>
    </style>

    <!--系统弹出框的文本样式-->
    <style name="AlertTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!--日期选择器样式-->
    <style name="AppDatePickerDialogStyle" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorAlertDialogListItem">@color/textColor</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="HomeSearchBoxStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/main_search_box_padding</item>
    </style>

    <style name="PopWindowStyle">
        <item name="android:windowEnterAnimation">@anim/pop_window_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_window_exit_anim</item>
    </style>

    <style name="EditViewTheme">
        <item name="android:background">@drawable/border_white_bg</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/border_white_bg</item>
        <item name="android:minHeight">@dimen/view_min_height</item>
    </style>

    <!--自定义评分控件样式-->
    <style name="AppRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/merchant_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--带图标的输入框容器-->
    <style name="CommonViewLayoutStyle">
        <item name="android:background">@drawable/border_white_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="InputIconStyle">
        <item name="android:width">@dimen/input_icon_size</item>
        <item name="android:height">@dimen/input_icon_size</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="CommonInputStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:padding">4dp</item>
    </style>

    <!--系统中CardView统一样式定义-->
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_view_margin</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
    </style>

</resources>
